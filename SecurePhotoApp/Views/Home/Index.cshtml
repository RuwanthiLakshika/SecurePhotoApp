@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e9f2 100%);
        min-height: 100vh;
    }

    .hero-gradient {
        background: linear-gradient(120deg, #3a47d5 0%, #00d2ff 100%);
        color: white;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
    }

        .hero-gradient::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 60%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(-30deg);
            pointer-events: none;
        }

    .feature-card {
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .feature-icon-wrapper {
        background: linear-gradient(120deg, #4776E6 0%, #8E54E9 100%);
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .cta-section {
        background: linear-gradient(120deg, #48c6ef 0%, #6f86d6 100%);
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .photo-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        position: relative;
        transition: transform 0.3s ease;
    }

        .photo-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .photo-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, rgba(0,0,0,0) 70%, rgba(0,0,0,0.2) 100%);
            border-radius: 12px;
            pointer-events: none;
        }

        .photo-card.lock-icon::after {
            background: rgba(0,0,0,0.2);
        }

    .btn-gradient {
        background: linear-gradient(120deg, #4776E6 0%, #8E54E9 100%);
        border: none;
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(71, 118, 230, 0.4);
            color: white;
        }

    .btn-outline-gradient {
        background: white;
        color: #4776E6;
        border: 1px solid #4776E6;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-outline-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(71, 118, 230, 0.2);
            color: #8E54E9;
        }

    .lock-icon {
        position: absolute;
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        z-index: 5;
    }
</style>

<div class="container py-5">
    <div class="hero-gradient p-5 mb-5">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-4 fw-bold mb-3">Secure Photo Sharing</h1>
                <p class="lead mb-4 opacity-90">Share your memories with confidence. Control who sees what with our advanced permission system.</p>
                <div class="d-grid gap-3 d-md-flex justify-content-md-start">
                    <a asp-controller="Photo" asp-action="Add" class="btn btn-light btn-lg px-4 me-md-2">Upload Photos</a>
                    <a asp-controller="Photo" asp-action="Gallery" class="btn btn-outline-light btn-lg px-4">My Gallery</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="position-relative" style="height: 350px;">
     
                    <div class="photo-card position-absolute" style="width: 180px; height: 240px; top: 20px; left: 20px; transform: rotate(-8deg); z-index: 1;">
                        <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" alt="Mountain landscape">
                    </div>

                    <div class="photo-card position-absolute" style="width: 200px; height: 260px; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 3;">
                        <img src="https://images.unsplash.com/photo-1609220136736-443140cffec6?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" alt="Family photo">
                    </div>

                    <div class="photo-card position-absolute" style="width: 160px; height: 220px; bottom: 20px; right: 30px; transform: rotate(10deg); z-index: 2;">
                        <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" alt="City view">
                    </div>

                    <div class="lock-icon" style="top: 30%; right: 10%; z-index: 4;">
                        <i class="bi bi-shield-lock fs-4 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 py-4 mb-5">
        <div class="col-md-4">
            <div class="feature-card h-100 shadow-sm p-4">
                <div class="feature-icon-wrapper">
                    <i class="bi bi-shield-lock text-white fs-3"></i>
                </div>
                <h3 class="text-center mb-3">Secure Sharing</h3>
                <p class="text-center text-muted mb-3">Control access to your photos with granular permissions. Share with individuals or groups.</p>
                <div class="text-center">
                    <a href="#" class="text-decoration-none fw-semibold" style="color: #4776E6;">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100 shadow-sm p-4">
                <div class="feature-icon-wrapper">
                    <i class="bi bi-cloud-arrow-up text-white fs-3"></i>
                </div>
                <h3 class="text-center mb-3">Cloud Storage</h3>
                <p class="text-center text-muted mb-3">Your photos are safely stored in the cloud with enterprise-grade encryption and security.</p>
                <div class="text-center">
                    <a href="#" class="text-decoration-none fw-semibold" style="color: #4776E6;">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100 shadow-sm p-4">
                <div class="feature-icon-wrapper">
                    <i class="bi bi-people text-white fs-3"></i>
                </div>
                <h3 class="text-center mb-3">Role-Based Access</h3>
                <p class="text-center text-muted mb-3">Assign roles to contacts and manage permissions at scale with ease.</p>
                <div class="text-center">
                    <a href="#" class="text-decoration-none fw-semibold" style="color: #4776E6;">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-4 shadow-sm p-5 mb-5">
        <h2 class="text-center mb-5">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <span class="fw-bold fs-3 text-primary">1</span>
                </div>
                <h4 class="mb-3">Upload Photos</h4>
                <p class="text-muted">Easily upload your photos to secure cloud storage.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <span class="fw-bold fs-3 text-primary">2</span>
                </div>
                <h4 class="mb-3">Organize</h4>
                <p class="text-muted">Create albums and tag photos for easy management.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <span class="fw-bold fs-3 text-primary">3</span>
                </div>
                <h4 class="mb-3">Set Permissions</h4>
                <p class="text-muted">Control who can view, download or share your photos.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <span class="fw-bold fs-3 text-primary">4</span>
                </div>
                <h4 class="mb-3">Share Securely</h4>
                <p class="text-muted">Share with confidence knowing your photos are protected.</p>
            </div>
        </div>
    </div>

    <div class="cta-section p-5 text-center text-white">
        <div class="container-fluid py-4">
            <h2 class="display-6 fw-bold mb-3">Ready to get started?</h2>
            <p class="fs-5 mb-4 opacity-90">Create an account today and start sharing your photos securely.</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-5 py-3 fw-semibold">Sign Up Now</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const featureCards = document.querySelectorAll('.feature-card');
            featureCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            const photoCards = document.querySelectorAll('.photo-card');
            photoCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = this.style.transform.replace('rotate', 'scale(1.05) rotate');
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = this.style.transform.replace('scale(1.05) ', '');
                });
            });
        });
    </script>
}