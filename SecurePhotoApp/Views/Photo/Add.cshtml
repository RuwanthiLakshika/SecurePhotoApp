@model SecurePhotoApp.Models.PhotoVM

@{
    ViewData["Title"] = "CreateProfile";
}

<h1>Upload File to Blob Storage</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Photo" asp-action="UploadFile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="File" class="control-label" style="font-weight:bold">File</label>
                <input asp-for="myFile" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit">Upload File</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}